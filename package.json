{
  "name": "alerthub",
  "version": "2.2.3",
  "description": "A tool to send notifications when an update to a repository is released",
  "main": "./src/index.js",
  "type": "module",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --coverageReporters=text --coverageReporters=json-summary",
    "lint": "npx @biomejs/biome check src/",
    "lint:fix": "npx @biomejs/biome check --fix src/",
    "init": "cp .env.example .env",
    "start": "node ./src/index.js"
  },
  "author": "Arda Kilicdagi",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Ardakilic/alerthub.git"
  },
  "dependencies": {
    "dotenv": "^17.2.2",
    "feed": "^5.1.0",
    "node-telegram-bot-api": "^0.66.0",
    "nodemailer": "^7.0.0",
    "pino": "^10.0.0",
    "pino-pretty": "^13.1.1",
    "pushbullet": "^3.0.0",
    "pushover-notifications": "^1.2.3",
    "rss-parser": "^3.13.0",
    "striptags": "^3.2.0"
  },
  "engines": {
    "node": ">=22.19.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "@jest/globals": "^30.1.2",
    "jest": "^30.1.3"
  }
}

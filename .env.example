# AlertHub Configuration via Environment Variables

# Application Settings
INTERVAL=60000
USER_AGENT=Mozilla/5.0 (Linux x86_64; rv:76.0) Gecko/20100101 Firefox/76.0
GITHUB_TOKEN=

# Notification Settings - PushBullet
PUSHBULLET_ENABLED=false
PUSHBULLET_ACCESS_TOKEN=

# Notification Settings - PushOver
PUSHOVER_ENABLED=false
PUSHOVER_USER=
PUSHOVER_TOKEN=

# Notification Settings - Email
EMAIL_ENABLED=true
EMAIL_HOST=smtp.service.com
EMAIL_PORT=465
EMAIL_SECURE=true
EMAIL_AUTH_USER=smtp@user.com
EMAIL_AUTH_PASS=password
EMAIL_FROM="AlertHub" <smtp@user.com>
EMAIL_TO=your@email.com
EMAIL_SUBJECT_PREFIX=New GitHub Release

# Notification Settings - Telegram
TELEGRAM_ENABLED=false
TELEGRAM_TOKEN=
TELEGRAM_CHAT_ID=

# RSS Feed Settings
RSS_ENABLED=true
RSS_PORT=3444
RSS_TITLE=AlertHub RSS
RSS_DESCRIPTION=My Awesome GitHub Release Aggregator
RSS_INCLUDE_FROM_EACH_REPOSITORY=10
RSS_COUNT=50
RSS_SITE_URL=https://github.com/Ardakilic/alerthub
RSS_FEED_URL=
RSS_LOG_LEVEL=info

# Repository Configuration (JSON format)
# Examples:
# GITHUB_RELEASES=["Ardakilic/alerthub","expressjs/express","Unitech/pm2","facebook/react"]
# GITHUB_TAGS=[]
# GITHUB_COMMITS={"laravel/laravel":["*"],"acikkaynak/acikkaynak":["master"]}
# GITHUB_ISSUES={"denoland/deno":{"state":"all","labels":""}}
# GITLAB_TAGS=["gitlab-org/gitlab-foss"]
# GITLAB_COMMITS={"gitlab-org/gitlab-foss":["master"]}
# EXTRAS=[]

GITHUB_RELEASES=
GITHUB_TAGS=
GITHUB_COMMITS=
GITHUB_ISSUES=
GITLAB_TAGS=
GITLAB_COMMITS=
EXTRAS=

# Logging Configuration
LOG_LEVEL=info
